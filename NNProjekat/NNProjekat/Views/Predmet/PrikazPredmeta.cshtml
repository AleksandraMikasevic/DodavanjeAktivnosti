@model Predmet
@{
    ViewBag.Title = "Prikaz predmeta";
}
<form>
    <div class='form-horizontal'>
        <div class='form-group'>
            <label class='control-label col-xs-4'>Sifra predmeta</label>
            <div class='col-xs-8'>
                <input type="text" id="sifra" value=@Model.SifraPredmeta />
            </div>
        </div>

        <div class='form-group'>
            <label class='control-label col-xs-4'>Datum</label>
            <div class='col-xs-8'>
                <p class="form-control-static">
                    @Model.Naziv
                </p>
            </div>
        </div>

        <div class='form-group'>
            <label class='control-label col-xs-4'>Napomena</label>
            <div class='col-xs-8'>
                <p class="form-control-static">
                    @Model.BrojESPB
                </p>
            </div>
        </div>
    </div>
    <a class="btn btn-info" href="/Student/PrikazStudenata/' + @Model.SifraPredmeta + '">Prikaz studenata</a>
</form>
<div style="width:90%; margin:0 auto;">
    <table id="aktivnostTabela" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th><div>SifraAktivnosti</div></th>
                <th><div>Naziv</div></th>
                <th><div>MinBrojPoena</div></th>
                <th><div>MaxBrojPoena</div></th>
                <th><div>TezinskiKoeficijent</div></th>
                <th><div>Dodaj</div></th>
            </tr>
        </thead>
    </table>
</div>
<script>
    $(document).ready(function () {
        $("#aktivnostTabela").DataTable({
            "language": {
                "search": "Pretraga",
                "processing": "Obrada",
                "paginate": {
                    "first": "Prvi",
                    "previous": "Prethodni",
                    "next": "Sledeci",
                    "last": "Poslednji"
                },
                "loadingRecords": "Ucitavanje podataka",
                "emptyTable": "Tabela je prazna",
                "zeroRecords": "Tabela je prazna",
                "info": "Prikazivanje _START_ do _END_ od _TOTAL_ aktivnosti",
                "lengthMenu": "Prikazi _MENU_  aktivnosti"

            },
            "destroy": true,
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "ajax": {
                "url": "/Predmet/VratiAktivnosti",
                "data": { "id": $('#sifra').val()},
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "SifraAktivnosti", "name": "SifraAktivnosti", "autoWidth": true },
                { "data": "Naziv", "name": "Naziv", "autoWidth": true },
                { "data": "MinBrojPoena", "name": "MinBrojPoena", "autoWidth": true },
                { "data": "MaxBrojPoena", "name": "MinBrojPoena", "autoWidth": true },
                { "data": "TezinskiKoeficijent", "name": "MinBrojPoena", "autoWidth": true },
                {
                    "render": function (data, type, full, meta) { return '<a class="btn btn-info" href="/Polagao/Dodaj/' + $('#sifra').val() + '/' + full.SifraAktivnosti + '">Dodaj</a>'; }
                },
            ]

        });
    });
</script>


