@{
    ViewBag.Title = "Pocetna strana";
}
<div class="login-form">
    <div class="main-div">
        <div class="panel">
            <h2>Prijava</h2>
            <p>Unesite korisnicko ime i lozinku</p>
        </div>
        <form id="Login" asp-controller="Activity" asp-action="Add">
            <div class="form-group">
                <input type="email" class="form-control" id="inputEmail" placeholder="Korisnicko ime">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="inputPassword" placeholder="Lozinka">
            </div>
            <button type="submit" class="btn btn-primary">Prijava</button>
        </form>
    </div>
</div>