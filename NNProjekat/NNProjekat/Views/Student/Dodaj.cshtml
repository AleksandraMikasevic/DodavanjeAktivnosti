@model StudentDodaj
@{
    ViewBag.Title = "Dodavanje aktivnosti";
}



<div class="forma">
    <div class="main-div">
        <div class="panel">
            <h2>Unos aktivnosti</h2>
            <p>Unesite informacije o aktivnosti</p>
        </div>
        <form method="post" asp-action="DodajPost" asp-controller="Student">

            <div class="form-group">
                <label asp-for="JMBG"></label>
                <input asp-for="JMBG" placeholder="JMBG" class="form-control" type="text" name="JMBG" value="" />
            </div>
            <div class="form-group">
                <label asp-for="Ime"></label>
                <input asp-for="Ime" placeholder="Ime" class="form-control" type="text" name="Ime" value="" />
            </div>
            <div class="form-group">
                <label asp-for="Prezime"></label>
                <input asp-for="Prezime" placeholder="Prezime" class="form-control" type="text" name="Prezime" value="" />
            </div>
            <div class="form-group">
                <label asp-for="BrojIndeksa"></label>
                <input asp-for="BrojIndeksa" placeholder="BrojIndeksa" class="form-control" type="text" name="BrojIndeksa" value="" />
            </div>
            <button type="submit" class="btn btn-primary" name="sacuvaj">Sacuvaj</button>
        </form>
    </div>
</div>
