@model PolagaoPolaganjaPoStudentu
@{
    ViewBag.Title = "Prikaz polaganja";
}
<div style="width:90%; margin:0 auto;">
    <table id="aktivnostTabela" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th><div>SifraAktivnosti</div></th>
                <th><div>Naziv</div></th>
                <th><div>Datum</div></th>
                <th><div>BrojPoena</div></th>
            </tr>
        </thead>
    </table>
</div>
<script>
    $(document).ready(function () {
        $("#aktivnostTabela").DataTable({
            "language": {
                "search": "Pretraga",
                "processing": "Obrada",
                "paginate": {
                    "first": "Prvi",
                    "previous": "Prethodni",
                    "next": "Sledeci",
                    "last": "Poslednji"
                },
                "loadingRecords": "Ucitavanje podataka",
                "emptyTable": "Tabela je prazna",
                "zeroRecords": "Tabela je prazna",
                "info": "Prikazivanje _START_ do _END_ od _TOTAL_ polaganja",
                "lengthMenu": "Prikazi _MENU_  polaganja"

            },
            "destroy": true,
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "ajax": {
                "url": "/Polagao/VratiPolaganja/"+'@Html.Raw(Model.SifraPredmeta)'+ '/@Html.Raw(Model.BrojIndeksa)',
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "SifraAktivnosti", "name": "SifraAktivnosti", "autoWidth": true },
                { "data": "Aktivnost.Naziv", "name": "Naziv", "autoWidth": true },
                { "data": "Datum", "name": "Datum", "autoWidth": true },
                { "data": "BrojPoena", "name": "BrojPoena", "autoWidth": true },
            ]

        });
    });
</script>
